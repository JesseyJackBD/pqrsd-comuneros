<div class="container p-4">
    <div class="row">
        <div class="col-ms-4 col-md-8 col-ml-8 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO EMPRESA {{persona.nombre_empresa}}</h3>
                </div>
                <div class="card-body">
                    <form action="/central/detailsEditUserExt/{{persona.empresa}}" method="post">
                    <div class="input-group mt-2">
                        <label for="" class="input-group-text">Telefono </label>
                        <input class="form-control" type="tel" name="telefono_empresa" id="telefono_empresa" placeholder="Telefono Empresa" value="{{persona.telefono_empresa}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="" class="input-group-text">Correo </label>
                        <input class="form-control" type="email" name="correo_empresa" id="correo_empresa" placeholder="Correo Empresa" value="{{persona.correo_empresa}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="" class="input-group-text">Descripcion</label>
                        <input class="form-control" type="text" name="descripcion_empresa" id="descripcion" placeholder="Descripcion Empresa" value="{{persona.descripcion_empresa}}" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Actualizar Empresa</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>