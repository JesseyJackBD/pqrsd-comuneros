<div class="container p-4">
    <div class="row">
        <div class="col-ms-4 col-md-8 col-ml-8 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO PQRSD Externo</h3>
                </div>
                <div class="card-body">
                    <form action="/central/editExt/{{persona.id_externo}}" method="post">
                    <div class="input-group mt-2">
                        <label for="" class="input-group-text">Radicado</label>
                        <input class="form-control" type="number" name="id_externo" id="id_externo" placeholder="# Radicado" value="{{persona.id_externo}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="id_empresa" class="input-group-text">Empresa</label>
                        <select class="form-select" aria-label="Default select example"  name="id_empresa" required>
                            <option selected value="{{persona.id_empresa}}">{{persona.nombre_empresa}}</option>
                            {{#each seleccionEmpresa}}
                            <option value="{{id_empresa}}">{{nombre_empresa}}</option>
                            {{/each}}
                        </select>
                    </div>                       
                    <div class="input-group mt-2">
                        <label for="id_categoria" class="input-group-text">Categoria</label>
                        <select class="form-select" aria-label="Default select example"  name="id_categoria" required>
                            <option selected hidden value="{{persona.id_categoria}}">{{persona.nombre_categoria}}</option>
                            {{#each seleccionCategoria}}
                            <option value="{{id_categoria}}">{{nombre_categoria}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="input-group mt-2">
                        <label for="id_estado" class="input-group-text">Estado</label>
                        <select class="form-select" aria-label="Default select example"  name="id_estado" required>
                            <option selected hidden value="{{persona.id_estado}}">{{persona.nombre_estado}}</option>
                            {{#each seleccionEstado}}
                            <option value="{{id_estado}}">{{nombre_estado}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="input-group mt-2">
                        <label for="asunto" class="input-group-text">Asunto</label>
                        <textarea class="form-control" type="text" name="asunto" id="asunto" placeholder="Contendio del pqrsd" value="{{persona.asunto}}" required>{{persona.asunto}}</textarea>
                    </div>
                    <div class="input-group mt-2">
                        <label for="fecha" class="input-group-text">Fecha</label>
                        <input class="form-control" type="date" name="fecha" id="fecha"  value="{{persona.fecha}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="id_administrador" class="input-group-text">Creado Por</label>
                        <select class="form-select" aria-label="Default select example"  name="id_administrador" required>
                            <option selected hidden value="{{persona.id_administrador}}">{{persona.nombre_administrador}}</option>
                            {{#each seleccionAdministrador}}
                            <option value="{{id_administrador}}">{{nombre_administrador}}</option>
                            {{/each}}
                        </select>
                    </div> 
                    <div class="input-group mt-2">
                        <label for="id_despachado" class="input-group-text">Despachado</label>                        
                        <select class="form-select" aria-label="Default select example"  name="id_despachado" required>
                            <option selected hidden value="{{persona.id_despachado}}">{{persona.nombre_despachado}}</option>
                            {{#each seleccionDespachado}}
                            <option value="{{id_despachado}}">{{nombre_despachado}}</option>
                            {{/each}}
                        </select>
                    </div> 
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Actualizar PQRSD Externo</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
